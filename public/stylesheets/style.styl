body
  margin 0
  padding 0
  font-family sans-serif
  font-size 12px
  background #e6ebea

a
  color #395998
  text-decoration none

#header, #content, #footer
  margin 0 auto
  width 80%

.menu
  padding 0
  margin 0

  li:first-child
    padding-left 0

  li
    display inline
    padding .5em

table
  border 1px solid #c6cbca
  border-collapse collapse

  tr:nth-child(even)
    background #d6dbda

  tr:hover
    background #f7f7f7

  td, th
    padding .2em
    border-left 1px solid #c6cbca

  th
    background #c6cbca

li
  padding 1px 0

.pri
  font-weight bold

.uni
  font-style italic

#query
  textarea
    width 80%
    height 480px
    border 1px solid #c6cbca
    padding .2em

  #savedQueries
    width 15%
    float right
    li
      cursor pointer
      color #395998

#results
  margin-top 1em
  overflow auto

  tr
    max-height 5em

  .null
    color #888
