- scripts.push('/js/query.js')

form#query(action='/#{host}/query', method='post')
  div
    label Database: 
      select(name='database')
        - databases.forEach(function(db){
           - if (db === database)
              option(value=db, selected)= db
           - else
              option(value=db)= db
        - })
      | 
      a(id='tableList', href='/#{database}') Browse tables

  div
    textarea(name='query')
    ul#savedQueries
      li Empty query
    label(title="Insert query paramters, separated by comma. Example: 2,'blubber',3,4") Query parameters: 
      input(name='parameters')
  div
    button.submit(type='submit',title='Press ctrl+return to submit.') Submit
    button.save(type='button') Save Query
  #results
